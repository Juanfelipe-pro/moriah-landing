---
import products from '../../public/data/products.json';
---

<section class="products-section" id="productos">
  <div class="container">
    <h2 class="section-title">Nuestros Caf√©s</h2>
    <p class="section-subtitle">Tostado de Forma Artesanal</p>

    <div class="row">
      {products.map((p) => (
        <div class="col-lg-4 col-md-6">
          <div class="product-card">
            <div class="card-shine"></div>
            <div class="product-image-container">
              <img src={p.imagen} class="product-image" alt={p.nombre} />
              <div class="product-badge">{p.etiqueta}</div>
            </div>
            <div class="product-info">
              <h5 class="product-name">{p.nombre}</h5>
              <div class="product-origin">
                <i class="fas fa-map-marker-alt"></i>
                <span>{p.origen}</span>
              </div>
              <p class="product-description">{p.descripcion}</p>
              <div class="product-features">
                {p.caracteristicas.map((c) => (
                  <span class="feature-tag">{c}</span>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
