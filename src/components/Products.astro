---
import products from '../../public/data/products.json';
---


<section class="products-section" id="cafes">
  <div class="container">
    <h2 class="section-title">Nuestros Cafés</h2>
    <p class="section-subtitle">Selección Premium</p>
    <div class="row">
      {products.map((cafe) => (
        <div class="col-lg-4 col-md-6">
          <div class="product-card">
            <div class="card-shine"></div>
            <div class="product-image-container">
              <img src={cafe.image} alt={cafe.name} class="product-image" />
              <span class="product-badge">{cafe.badge}</span>
            </div>
            <div class="product-info">
              <h3 class="product-name">{cafe.name}</h3>
              <div class="product-origin">
                <i class="fas fa-map-marker-alt"></i> {cafe.origin}
              </div>
              
              <div class="product-notes">
                <div class="notes-label">
                  <i class="fas fa-coffee"></i>
                  Notas de sabor
                </div>
                <div class="notes-content">
                  {cafe.notes}
                </div>
              </div>

              <div class="product-features">
                {cafe.features.map((feature) => (
                  <span class="feature-tag">{feature}</span>
                ))}
              </div>
              
              <div class="product-footer">
                <div class="product-price">
                  ${cafe.price.toLocaleString('es-CO')}
                </div>
                <button class="btn-buy">
                  <i class="fas fa-shopping-cart"></i>
                  Comprar
                </button>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>